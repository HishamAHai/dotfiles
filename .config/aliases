# Aliases
#Pacman
alias p="sudo pacman --color always"
alias c="checkupdates"

# Timeshift backup
alias ltime="sudo timeshift --list"
alias dels="sudo timeshift --delete --snapshot"
alias cres="sudo timeshift --create --comments"

alias ls="exa --icons -lah --no-user --color=always --group-directories-first"
alias diff="diff --color=always"
alias v="nvim"
#alias w="curl -H 'Accept-Language: es' wttr.in/bariloche"
alias grep="grep --color=always"
alias du="dust -r"
alias df="df -h"
alias duf="duf -hide-fs tmpfs,devtmpfs"
alias cb="cd ~/.local/bin"
alias cc="cd ~/.config"
alias wget="wget --hsts-file='$XDG_CACHE_HOME/wget-hsts'"
alias config='/usr/bin/git --git-dir=$HOME/.cfg/ --work-tree=$HOME'
alias pic='/usr/bin/git --git-dir=$HOME/Pictures/.cfg/ --work-tree=$HOME/Pictures'

#Transmission
alias addt="transmission-remote -a"
alias addm="transmission-remote -a \""
alias list="watch -n 1 transmission-remote -l"

alias myt="mpv --ytdl-format=\""
alias ytls="yt-dlp --list-format"
alias n="ncmpcpp"
alias ffprobe="ffprobe -hide_banner"
alias ffmpeg="ffmpeg -hide_banner"

#typo mistakes
alias eixt="exit"
alias sduo="sudo"
alias paur="paru"

#switch between bash and zsh
alias tobash="sudo chsh $USER -s /bin/bash && echo 'Now log out.'"
alias tozsh="sudo chsh $USER -s /bin/zsh && echo 'Now log out.'"

#Download subtitle
alias osd="$HOME/.local/bin/OpenSubtitlesDownload.py --cli -l ara"

#Restart awesome
alias reload="echo 'awesome.restart()' | awesome-client"

#Preview images in kitty
alias prev="kitty +kitten icat" #Remember that this alias works only in kitty terminal

#unimatrix with async and specific speed
alias unimatrix="unimatrix -af -s 96"

#restart logiops
alias mouse="sudo systemctl restart --now logid.service"

#gphoto2 
#download all files to the current directory
alias gd="gphoto2 -f /store_00010001/DCIM/101D7100 -P"
#list all files on camera
alias ga="gphoto2 -f /store_00010001/DCIM/101D7100 -L"
#remove all files on camera
alias gr="gphoto2 -f /store_00010001/DCIM/101D7100 -D"

# lf with preivews
alias lf="$HOME/.local/bin/lfpreview"
# simplify aria2 downloader
alias ar="aria2c"

# ncdu with blocks
alias ncdu="ncdu --graph-style half-block"
